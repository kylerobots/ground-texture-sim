{
	"build": {
		"args": {
			"IGNITION_VERSION": "edifice",
			"UBUNTU_VERSION": "20.04",
		},
		"context": "..",
		"dockerfile": "../Dockerfile",
		"target": "dev",
	},
	"containerEnv": {
		"DISPLAY": "host.docker.internal:0.0"
	},
	"extensions": [
		"cschlosser.doxdocgen",
		"ms-vscode.cmake-tools",
		"ms-vscode.cpptools",
		"streetsidesoftware.code-spell-checker",
		"twxs.cmake",
	],
	"name": "Ground Texture",
}